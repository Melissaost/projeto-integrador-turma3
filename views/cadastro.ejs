    <title>Barba,Cabelo e Bigode</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;400;700;900&family=Staatliches&display=swap"
        rel="stylesheet">
</head>

<body>
    <%- include('./partials/header') %>
        <main>

        <section class="corpoCadastro">

            <section id="formulariocampos">
                <h2 class="tituloh2">CRIE SUA CONTA</h2>
                <% if(typeof errors !== 'undefined'){%> 
                    <ul>
                        <% for(let error in errors){ %>
                            <li class="error">
                                <b><%= error %> : </b>
                                <%= errors[error].msg %>
                            </li> 
                        <% } %> 
                    </ul>
                <% } %> 

                <form class=form1 id="form1" action="/cadastro" method="POST">
                    <input type="text" id="nome" name="nome" placeholder="Digite seu nome" required
                    <% if(typeof oldData !== 'undefined') {%> value="<%=oldData.nome %>" <% }%>>
                    <br>
                    <input type="email" id="email" name="email" placeholder="Digite seu email" required
                    <% if(typeof oldData !== 'undefined') {%> value="<%=oldData.email %>" <% }%>>
                    <br>
                    <input type="password" id="senha" name="senha" placeholder="Digite sua senha" required>
                    <br>
                    <input type="number" id="cpf" name="cpf" placeholder="Digite seu CPF"
                    <% if(typeof oldData !== 'undefined') {%> value="<%=oldData.cpf %>" <% }%>>
                    <br>
                    <input class=date type="date" id="nascimento" name="nascimento" placeholder="Digite a data de nascimento" 
                    <% if(typeof oldData !== 'undefined') {%> value="<%=oldData.nascimento %>" <% }%>>
                    <br>
                    <input type="tel" id="telefone" name="telefone" placeholder="Digite seu telefone para contato"
                    <% if(typeof oldData !== 'undefined') {%> value="<%=oldData.telefone %>" <% }%>>
                    <br>
                            <div class="radio-container">
                                <label for="masculino">
                                    <input type="radio" id="masculino" value="masculino" name="radio" />
                                    <div class="custom-radio">
                                        <span></span>
                                    </div>
                                    <span>Masculino</span>
                                </label>
                            </div>
                            <div class="radio-container">
                                <label for="feminino">
                                    <input type="radio" id="feminino" value="feminino" name="radio" />
                                    <div class="custom-radio">
                                        <span></span>
                                    </div>
                                    <span>Feminino</span>
                                </label>
                            </div>
                            <div class="radio-container">
                                <label for="outros">
                                    <input type="radio" id="outros" value="outros" name="radio" />
                                    <div class="custom-radio">
                                        <span></span>
                                    </div>
                                    <span>Outros</span>
                                </label>
                            </div>
                            <div class="radio-container">
                                <label for="nao informado">
                                    <input type="radio" id="nao informado" value="nao informado" name="radio" />
                                    <div class="custom-radio">
                                        <span></span>
                                    </div>
                                    <span>Prefiro n√£o informar</span>
                                </label>
                            </div>
                        </div>
                        <input type="submit" value="CONCLUIR" class="concluirCadastro" />

                    </form>
                </section>



            </section>

        </main>
        <%- include('./partials/footer') %>
</body>

</html>