<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/estiloCadastro.css">
    <link rel="stylesheet" href="/stylesheets/estilo.css">
    <link rel="stylesheet" href="/stylesheets/estiloHeaderFooter.css">
    <title>Barba,Cabelo e Bigode</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
<%- include('./partials/header') %>
<main>

        <section class="corpoCadastro">
            <div class="facaSeuLogin">
                <h1 class="titulo">FAÇA SEU LOGIN</h1>
                <h2 class="titulo">ACESSE COM UMAS DE SUAS CONTAS SOCIAIS</h2>
                <div class="links">
                    <a href="assinante"><img src="/images/Facebook-login.png"></a>
                    <a href="assinante"><img src="/images/instagram-login.png"></a>
                    <a href="assinante"><img src="/images/google-login.png"></a>
                </div>
                <p class="titulo">OU</p>
            </div>
            <div class="caixinhaLogin">
                <% if(typeof errors !== 'undefined'){%> 
                    <ul>
                        <% for(let error in errors){ %>
                            <li>
                                <%= errors[error].msg %>
                            </li> 
                        <% } %> 
                    </ul>
                <% } %> 
                <form id="login" action="/logar" method="POST">
                    <input type="email" id="email" name="email" placeholder="Digite seu email" required>
                    <br>
                    <input type="password" id="senha" name="senha" placeholder="Digite sua senha" required>
                    <br>
                    <div id="lembrarMe">
                        <input type="checkbox" id="lembrar" name="lembrar"><label for="lembrar">Lembrar meu usuário</label>
                    </div>
                    <div class="btnCadastro">
                        <input type="submit" value="LOGAR" class="logar"  />
                    </div>
                </form>
                <a href="/cadastro">Cadastre-se</a>
            </div>

        </main>
        <%- include('./partials/footer') %>   
    
    </body>
    </html>